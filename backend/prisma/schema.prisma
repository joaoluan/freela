generator client {
provider = "prisma-client-js"
}


datasource db {
provider = "postgresql"
url = env("DATABASE_URL")
}


enum Role {
FREELANCER
RESTAURANT
}


model User {
id String @id @default(cuid())
email String @unique
passwordHash String?
role Role
displayName String?
cpf String? @unique
cnpj String? @unique
restaurantName String?
address String?
phone String?


// OAuth
provider String?
providerId String? @unique


createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
}